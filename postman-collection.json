{
  "info": {
    "name": "Inspectify Backend API",
    "description": "Property inspection management platform with Innovatrics DIS session-based verification",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "noauth"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "sessionId",
      "value": "",
      "type": "string",
      "description": "Session ID from create session response"
    }
  ],
  "item": [
    {
      "name": "System",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            },
            "description": "Check if the API server is running and get basic information"
          }
        }
      ]
    },
    {
      "name": "Verification Sessions",
      "item": [
        {
          "name": "Create Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const responseJson = pm.response.json();",
                  "    pm.collectionVariables.set('sessionId', responseJson.data.sessionId);",
                  "    console.log('Session ID set to:', responseJson.data.sessionId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"test-user-123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verification/session",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "session"]
            },
            "description": "Create a new verification session with Innovatrics DIS"
          }
        },
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"frontImage\": \"data:image/jpeg;base64,\",\n  \"backImage\": \"data:image/jpeg;base64,\",\n  \"documentType\": \"passport\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verification/{{sessionId}}/document",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "{{sessionId}}", "document"]
            },
            "description": "Upload document images (front and back) for verification"
          }
        },
        {
          "name": "Liveness Check",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"image\": \"data:image/jpeg;base64,\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/verification/{{sessionId}}/liveness",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "{{sessionId}}", "liveness"]
            },
            "description": "Perform liveness check with a selfie image"
          }
        },
        {
          "name": "Face Match",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/verification/{{sessionId}}/face-match",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "{{sessionId}}", "face-match"]
            },
            "description": "Perform face matching between document and selfie images"
          }
        },
        {
          "name": "Get Session Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/verification/{{sessionId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "{{sessionId}}", "status"]
            },
            "description": "Get the current status and results of the verification session"
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/verification/{{sessionId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "verification", "{{sessionId}}"]
            },
            "description": "Delete/terminate a verification session"
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// This script runs before every request",
          "// You can add global setup logic here"
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// This script runs after every request",
          "// You can add global assertions here"
        ]
      }
    }
  ]
}
